<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DiarioBienestar2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DiarioBienestar2"
    Shell.FlyoutBehavior="Disabled"
    Title="DiarioBienestar">

    <ShellContent
        ContentTemplate="{DataTemplate local:Login}"
        Route="Login" />

    <TabBar>
        <ShellContent
            Title="Inicio"
            ContentTemplate="{DataTemplate local:Inicio}"
            Route="Inicio" />
        
        <ShellContent
            Title="Registro Diario"
            ContentTemplate="{DataTemplate local:RegistroDiario}"
            Route="RegistroDiario" />
        
        <ShellContent
            Title="Estadisticas"
            ContentTemplate="{DataTemplate local:Estadisticas}"
            Route="Estadisticas" />
        
        <ShellContent
            Title="Lista de Registros"
            ContentTemplate="{DataTemplate local:ListaRegistros}"
            Route="ListaRegistros" />
    </TabBar>


</Shell>
